generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Esteira {
  id           String     @id @default(uuid())
  idBanco      String     @unique
  data         DateTime
  valor        Float
  descricao    String
  origem       String
  classificado Boolean    @default(false)
  criadoEm     DateTime   @default(now())
  lancamento   Lancamento? @relation(fields: [lancamentoId], references: [id])
  lancamentoId String?     @unique
}

model Lancamento {
  id          String   @id @default(uuid())
  idBanco      String     @unique
  data        DateTime
  valor       Float
  descricao   String
  origem      String   
  criadoEm    DateTime @default(now())
  classificacao Classificacao? @relation(fields: [classificacaoId], references: [id])
  classificacaoId String?
  recorrente Boolean @default(false) 
  destaque   Boolean @default(false)
  destaqueDescricao String? 
  esteira    Esteira?
}

model Classificacao {
  id          String   @id @default(uuid())
  nome        String
  descricao   String?
  criadoEm    DateTime @default(now())
  lancamentos Lancamento[]
}